// Create form
form = document.createElement('form');

// Create form inputs
inputTeacher = document.createElement('input');
// Do I need to do anything to create Observation_ID and Observation_Date?
inputTeacher.type = 'text'; // How do I make this a dropdown?
inputTeacher.name = 'Observation_Teacher';
inputTeacher.placeholder = 'Teacher...';

inputClass = document.createElement('input');
inputClass.type = 'text';
inputClass.name = 'Observation_Class';
inputClass.placeholder = 'Class...';

inputFocus = document.createElement('input');
inputFocus.type = 'text';
inputFocus.name = 'Observation_Focus';
inputFocus.placeholder = 'Focus...';

inputStrengths = document.createElement('input');
inputStrengths.type = 'text';
inputStrengths.name = 'Observation_Strengths';
inputStrengths.placeholder = 'Strengths...';

inputWeaknesses = document.createElement('input');
inputWeaknesses.type = 'text';
inputWeaknesses.name = 'Observation_Weaknesses';
inputWeaknesses.placeholder = 'Areas for development...';

inputComments = document.createElement('input');
inputComments.type = 'text';
inputComments.name = 'Observation_Comments';
inputComments.placeholder = 'Other Comments...';

// Create submit button
buttonSubmit = document.createElement('input');
buttonSubmit.type = 'submit';
buttonSubmit.value = 'Submit';

// Add elements to form
form.appendChild(inputTeacher);
form.appendChild(inputClass);
form.appendChild(inputFocus);
form.appendChild(inputStrengths);
form.appendChild(inputWeaknesses);
form.appendChild(inputComments);
form.appendChild(buttonSubmit);

// Append form to the DOM
document.body.appendChild(form);